<%= form_with(model: tasks, local: true) do |f| %>
  <% if tasks.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasks.errors.full_messages.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.text_field :status %>

  <%= f.submit '投稿' %>
<% end %>